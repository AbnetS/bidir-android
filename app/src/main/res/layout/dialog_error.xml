<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/dialog_root"
    android:orientation="vertical"
    tools:context=".ui.common.dialogs.error.ErrorDialog">

    <TextView
        android:id="@+id/errorDialogTitleLabel"
        style="@style/label.large"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textColor="@color/red"
        tools:text="@string/error_sample_title" />

    <TextView
        android:id="@+id/errorDialogMessageLabel"
        style="@style/label"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:text="@string/error_sample_message_label" />

    <LinearLayout
        android:id="@+id/errorDialogExtraContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/errorDialogViewLabel"
            style="@style/label.small"
            android:layout_gravity="center_horizontal"
            android:text="@string/error_view_less_label"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/errorDialogExtraLabel"
            style="@style/label.small"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="@color/gray_dark"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/errorDialogOkayButton"
            style="@style/button.dark.red.dialog"
            android:text="@string/sample_button_ok" />
    </LinearLayout>

</LinearLayout>