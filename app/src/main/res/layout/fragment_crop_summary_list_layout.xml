                android:layout_width="0dp"
                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:text="@string/crop_list_summary_value_label" />

        </LinearLayout>

        <LinearLayout style="@style/summary_inputs_row_container">

            <TextView
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:text="@string/crop_list_summary_maximum_yield_title_label" />

            <TextView
                android:id="@+id/cropSummaryMaximumYieldEstimatedValueLabel"
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:text="@string/crop_list_summary_value_label" />

            <TextView
                android:id="@+id/cropSummaryMaximumYieldActualValueLabel"
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:text="@string/crop_list_summary_value_label" />

        </LinearLayout>

        <LinearLayout
            style="@style/summary_inputs_row_container" >

            <TextView
