                android:text="@string/crop_list_summary_value_label" />

            <TextView
                android:id="@+id/cropSummaryMinimumYieldActualValueLabel"
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:text="@string/crop_list_summary_value_label" />

        </LinearLayout>

        <LinearLayout style="@style/summary_inputs_row_container">

            <TextView
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:text="@string/crop_list_summary_own_cons_title_label" />

            <TextView
                android:id="@+id/cropSummaryOwnConsEstimatedValueLabel"
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:text="@string/crop_list_summary_value_label" />

            <TextView
                android:id="@+id/cropSummaryOwnConsActualValueLabel"
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:text="@string/crop_list_summary_value_label" />

        </LinearLayout>

        <LinearLayout style="@style/summary_inputs_row_container">

            <TextView
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:text="@string/crop_list_summary_seed_res_title_label" />

            <TextView
                android:id="@+id/cropSummarySeedResEstimatedValueLabel"
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:text="@string/crop_list_summary_value_label" />

            <TextView
                android:id="@+id/cropSummarySeedResActualValueLabel"
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:text="@string/crop_list_summary_value_label" />

        </LinearLayout>

        <LinearLayout
            style="@style/summary_inputs_row_container" >

            <TextView
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:text="@string/crop_list_summary_for_market_title_label" />

            <TextView
                android:id="@+id/cropSummaryForMarketEstimatedValueLabel"
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:text="@string/crop_list_summary_value_label" />

            <TextView
                android:id="@+id/cropSummaryForMarketActualValueLabel"
                style="@style/label"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:text="@string/crop_list_summary_value_label" />

        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_light"
            android:orientation="horizontal">

            <TextView
                style="@style/label"
                android:layout_gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/net_cashflow" />

            <View style="@style/list_separator"
                android:layout_width="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cropSummaryNetCashFlowRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>