<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/fragment_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    tools:context=".ui.crop_summary_list.CropSummaryListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/label"
            android:paddingBottom="16dp"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:paddingTop="16dp"
            android:text="@string/crop_list_summary_costs_title" />

        <View style="@style/summary_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                style="@style/summary_inputs_row_container"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="10" />

                <TextView
                    style="@style/label.green"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:gravity="center_horizontal"
                    android:text="@string/crop_list_summary_estimated_title_label" />

                <TextView
                    style="@style/label.green"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:gravity="center_horizontal"
                    android:text="@string/crop_list_summary_actual_title_label" />
            </LinearLayout>

            <LinearLayout style="@style/summary_inputs_row_container">

                <TextView
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:text="@string/crop_list_summary_inputs_title_label" />

                <TextView
                    android:id="@+id/cropSummaryInputsEstimatedValueLabel"
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:gravity="center_horizontal"
                    android:text="@string/crop_list_summary_value_label" />

                <TextView
                    android:id="@+id/cropSummaryInputsActualValueLabel"
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:gravity="center_horizontal"
                    android:text="@string/crop_list_summary_value_label" />

            </LinearLayout>

            <LinearLayout style="@style/summary_inputs_row_container">

                <TextView
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:text="@string/crop_list_summary_labour_costs_title_label" />

                <TextView
                    android:id="@+id/cropSummaryLabourCostEstimatedValueLabel"
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:gravity="center_horizontal"
                    android:text="@string/crop_list_summary_value_label" />

                <TextView
                    android:id="@+id/cropSummaryLabourCostActualValueLabel"
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:gravity="center_horizontal"
                    android:text="@string/crop_list_summary_value_label" />

            </LinearLayout>

            <LinearLayout
                style="@style/summary_inputs_row_container" >

                <TextView
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:text="@string/crop_list_summary_other_costs_title_label" />

                <TextView
                    android:id="@+id/cropSummaryOtherCostEstimatedValueLabel"
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:gravity="center_horizontal"
                    android:text="@string/crop_list_summary_value_label" />

                <TextView
                    android:id="@+id/cropSummaryOtherCostActualValueLabel"
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:gravity="center_horizontal"
                    android:text="@string/crop_list_summary_value_label" />

            </LinearLayout>

            <LinearLayout
                style="@style/summary_inputs_row_container"
                android:paddingBottom="0dp">

                <TextView
                    style="@style/label.green"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:text="@string/crop_list_summary_total_title_label" />

                <TextView
                    android:id="@+id/cropSummaryTotalEstimatedValueLabel"
                    style="@style/label.green"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:gravity="center_horizontal"
                    android:text="@string/crop_list_summary_value_label" />

                <TextView
                    android:id="@+id/cropSummarTotalyActualValueLabel"
                    style="@style/label.green"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:gravity="center_horizontal"
                    android:text="@string/crop_list_summary_value_label" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/label"
            android:paddingBottom="16dp"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:paddingTop="16dp"
            android:text="@string/crop_list_summary_yield_title" />

        <View style="@style/summary_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            style="@style/summary_inputs_row_container"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="10" />

            <TextView
