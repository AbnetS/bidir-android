<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/complexQuestionItemChildNumberLabel"
        style="@style/label.small.gray"
        android:layout_marginTop="6dp"
        android:gravity="center"
        tools:text="1.1" />

    <TextView
        android:id="@+id/complexQuestionItemChildRequiredLabel"
        style="@style/label.red"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="@string/asterisk" />

    <TextView
        android:id="@+id/complexQuestionItemChildTextLabel"
        style="@style/label.small"
        android:layout_width="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:layout_weight="9" />

    <LinearLayout
        android:id="@+id/complexQuestionItemChildValuesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="10"
        android:orientation="vertical" />

</LinearLayout>