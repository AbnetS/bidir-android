<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_background">

    <TextView
        android:id="@+id/taskItemLayoutTimeStampLabel"
        style="@style/label.small.gray"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/text_size_tiny" />

    <TextView
        android:id="@+id/taskItemLayoutNameLabel"
        style="@style/label.small"
        android:layout_width="match_parent"
        android:layout_below="@+id/taskItemLayoutTimeStampLabel"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <View
        style="@style/list_separator"
        android:layout_below="@+id/taskItemLayoutNameLabel" />

</RelativeLayout>