<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/acat_green_custom_border"
    android:padding="8dp">

    <TextView
        android:id="@+id/expandable_list_view_group_header"
        style="@style/label"
        android:padding="8dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/expandable_list_view_group_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:srcCompat="@drawable/ic_expand_more" />

    <TextView
        android:id="@+id/subtotal_item_group_label"
        style="@style/label.large"
        android:layout_width="160dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/green_light"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textAlignment="center" />
</RelativeLayout>