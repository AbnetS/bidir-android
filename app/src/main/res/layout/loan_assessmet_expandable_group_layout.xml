<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/acat_green_custom_border"
    android:padding="8dp">

    <TextView
        android:id="@+id/expandable_list_view_group_header"
        style="@style/label.small"
        android:layout_width="180dp"
        android:padding="8dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/expandable_list_view_group_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/expandable_list_view_group_header"
        android:layout_centerVertical="true"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:srcCompat="@drawable/ic_expand_more" />

</RelativeLayout>