<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/assessmentResultCropCashFlowSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/green_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cropNameLabel"
            style="@style/label.small"
            android:layout_width="140dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

        <View style="@style/list_separator"
            android:layout_width="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cropItemCashFlowRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:listitem="@layout/acat_footer_cash_flow_item_layout" />
    </LinearLayout>

</LinearLayout>

