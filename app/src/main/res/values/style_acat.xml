<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ==================================== ACAT FRAGMENT ======================== -->
    <style name="acat_layout_row_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">5</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="acat_loan_proposal_row_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">7</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="acat_layout_input" parent="input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:hint">@null</item>
    </style>


    <!-- List separator -->
    <style name="acat_list_separator">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_super_light</item>
    </style>
</resources>